<%- include('../Includes/header.ejs') %>
    <title>
        <%=Title_Page%>
    </title>

    <link rel="stylesheet" type="text/css" href="/style6.css">

    </head>

    <body>
        <%- include('../Includes/navigation.ejs') %>
            <div class="container login-container">
                <div class="row">
                    <div class="col-md-6 ads">
                        <img src="image/cartoon.jpg" class="d-block w-100" height="500px" width="400px" alt="...">
                    </div>
                    <div class="col-md-6 login-form">
                        <h3>Login</h3>
                        <form method="POST" action="/logValue">
                            <input type="hidden" value="<%=csrf%>" name="_csrf">
                            <div class="form-group">
                                <i class="fa fa-envelope" aria-hidden="true"></i><label for="email">Email:</label><br>
                                <input type="string" id="email" class="form-control" name="email" value="<% if(cookie_data.cookiedata){%> <%=cookie_data.cookiedata.emailCookie%> <%}%>"><br>
                                <%if(errorMsg){%>
                                    <div class="errorMessage">
                                        <%=errorMsg%>
                                    </div>

                                    <%}%>
                            </div>
                            <div class="form-group">
                                <i class="fa fa-key" aria-hidden="true"></i><label for="pswd">Password:</label><br>
                                <input type="string" id="pswd" class="form-control" name="pswd" value=""><br>
                            </div>
                            <%if(error.length>0) {%>
                                <%for(let err of error) {%>
                                    <div>
                                        <h6 style="color:red;">
                                            <%=err.msg%>
                                        </h6>
                                    </div>
                                    <%}%>

                                        <%}%>
                                            <div class="form-group forget-password">
                                                <a href="/send_link" style="text-decoration: none;">Forgot password?</a>
                                            </div>
                                            <label><input id="rememberme" name="checked" value="remember" type="checkbox" /> &nbsp;Remember me</label> <br>
                                            <input type="submit" id="butn" class="signin_btn" value="LogIn">
                                            <div class="text">Not a member? <a href="/reg_form">sign up</a>
                                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <%- include('../Includes/footer.ejs') %>