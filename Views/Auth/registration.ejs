<%- include('../Includes/header.ejs') %>
    <title>
        <%=Title_Page%>
    </title>

    <link rel="stylesheet" type="text/css" href="/style5.css">

    </head>

    <body>
        <%- include('../Includes/navigation.ejs') %>
            <div class="container">
                <div class="d-flex justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                            <h3>Sign Up</h3>
                            <div class="d-flex justify-content-end social_icon">
                                <span><i class="fa fa-facebook-square" aria-hidden="true"></i></span>
                                <span><i class="fa fa-google" aria-hidden="true"></i></span>
                                <span><i class="fa fa-twitter" aria-hidden="true"></i></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/regValue">
                                <input type="hidden" value="<%=csrf%>" name="_csrf">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>

                                    </div>
                                    <input type="string" id="fname" class="form-control" placeholder="Firstname" name="fname" value="">

                                </div>
                                &nbsp;
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
                                    </div>
                                    <input type="string" id="lname" class="form-control" placeholder="Lastname" name="lname" value="">

                                </div>
                                &nbsp;
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                    </div>
                                    <input type="string" id="email" class="form-control" placeholder="email" name="email" value="">
                                    <%if(errorMsg){%>
                                        <div class="errorMessage">
                                            <%=errorMsg%>
                                        </div>

                                        <%}%>
                                </div>
                                &nbsp;
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-key" aria-hidden="true"></i></span>
                                    </div>
                                    <input type="string" id="pswd" class="form-control" placeholder="password" name="pswd" value="">
                                </div>
                                <%if(error.length>0) {%>
                                    <%for(let err of error) {%>
                                        <div>
                                            <h6 style="color:red;">
                                                <%=err.msg%>
                                            </h6>
                                        </div>
                                        <%}%>

                                            <%}%>
                                                &nbsp;

                                                <div class="form-group">
                                                    <input type="submit" value="Submit" class="btn float-right login_btn">
                                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                Already have an account?<a href="/login_form">Log In</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <%- include('../Includes/footer.ejs') %>