<%- include('../Includes/header.ejs') %>
    <title>
        <%=title%>
    </title>

    <link rel="stylesheet" type="text/css" href="/style9.css">

    </head>

    <body>
        <%- include('../Includes/navigation.ejs') %>
            <div class="container">
                <table id="cart" class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th style="width:50%">Product</th>
                            <th style="width:10%">Price</th>
                            <th style="width:8%">Quantity</th>
                            <th style="width:22%" class="text-center">Subtotal</th>
                            <th style="width:10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if(data.length>0){%>
                            <%for(let prod of data){%>
                                <tr>
                                    <td data-th="Product">
                                        <div class="row">
                                            <div class="col-sm-2 hidden-xs"><img src="../<%=prod.cart[0]. proimg%>" style="width: 100px; height: 100px;" alt="..." class="img-responsive" /></div>
                                            <div class="col-sm-10">
                                                <h4 class="nomargin">
                                                    <%=prod.cart[0]. protitle%>
                                                </h4>
                                                <h5>
                                                    <%=prod.cart[0]. prodesc%>
                                                </h5>
                                                <p>Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Lorem ipsum dolor sit amet.</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Price">
                                        <%=prod.cart[0].proprice%>
                                    </td>
                                    <td data-th="Quantity">
                                        <input type="number" class="form-control text-center" value=" <%=prod.quantity%>">
                                    </td>
                                    <td data-th="Subtotal" class="text-center">
                                        <%=prod.cart[0].proprice *
                                            prod.quantity%>
                                    </td>
                                    <td class="actions" data-th="">
                                        <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
                                        <button class="btn btn-warning btn-sm"><i class="fa fa-trash-o">
                                            <a href="/deletefromcart/<%=prod._id%>">Remove</a>
                                        </i></button>
                                    </td>
                                </tr>
                                <%}%>
                                    <%}else{%>
                                        <h1>data not found</h1>
                                        <%}%>
                    </tbody>
                    <tfoot>
                        <tr class="visible-xs">
                            <td class="text-center"><strong>Total 1.99</strong></td>
                        </tr>
                        <tr>
                            <td><a href="/shpDetails" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                            <td colspan="2" class="hidden-xs"></td>
                            <td class="hidden-xs text-center"><strong>Total $1.99</strong></td>
                            <td><a href="/payment_form" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
                        </tr>
                    </tfoot>
                </table>
            </div>


            <%- include('../Includes/footer.ejs') %>