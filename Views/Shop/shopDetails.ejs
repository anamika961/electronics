<%- include('../Includes/header.ejs') %>
    <title>
        <%=title %>
    </title>
    <link rel="stylesheet" type="text/css" href="/style4.css">
    </head>

    <body>
        <%- include('../Includes/navigation.ejs') %>
            <br>
            <%if(productdata.length>0){%>
                <div class="container">
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <form action="/searchProduct" method="POST" class="zz">
                            <input type="hidden" value="<%=csrf%>" name="_csrf">
                            <input type="text" name="searchText" value="">
                            <button type="submit" class="btn btn-delete">Search</button>
                        </form>
                        <%for(let i of productdata){%>
                            <div class="col">
                                <div class="card">
                                    <img src="../<%=i.proimg%>" class="card-img-top" height="200px" width="200px " alt="... ">
                                    <div class="card-body ">
                                        <h5 class="card-title ">Product Title:
                                            <%=i.protitle%>
                                        </h5>
                                        <h6 class="card-subtitle mb-2 text-muted ">Product Image:
                                            <%=i. proimg%>
                                        </h6>
                                        <p class="card-text ">Product Price:
                                            <%=i.proprice%>
                                        </p>
                                        <p class="card-text ">Product Desc:
                                            <%=i. prodesc%>
                                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                                        </p>
                                        <a href="/shopProduct/<%=i._id%>" class="btn btn-primary">Details</a>
                                        <a href="#" class="btn btn-primary"><i class="fa fa-heart" aria-hidden="true"></i>Wishlist</a>
                                    </div>
                                </div>
                            </div>

                            <%}%>
                    </div>
                </div>

                <%}else{%>
                    <h1>data not found </h1>
                    <%} %>


                        <%- include('../Includes/footer.ejs') %>